        $(document).ready(function(){
        $('#celular').mask('(99)9-9999-9999');
        });
        </script>
  </head>
  <body style="width:100%;">      
  
       </header>
        <!--Inicio Conteudo-->
        <section> 
                <h1 id="titulo1_cadastro">Editar o Cadastro Médico!</h1>
            <form name="cadastro" id="cadastro" method="post" action="/cadastro/medico/edit/salvar">
                <div id="cadastro_left">
                            <label for="nome" class="required"> Nome</label><br>
                            <input type="text" name="nome" id="nome" placeholder="Nome Completo" value="<%=nome %>" required>
                            
                            <label for="crm" class="required"><br>CRM</label><br>
                            <input type="number" name="crm" id="crm" placeholder="Somente números" value="<%=crm %>" required>
                  </div>
                <div id="cadastro_right">
                        <label for="celular"> Telefone</label><br>
                        <input type="tel" name="telefone" id="celular" placeholder="(99) 9-9999-9999" value="<%=telefone %>">
                        <br>
                        <input type="submit" name="salvar">
                </div>
                </form>
           </section>
